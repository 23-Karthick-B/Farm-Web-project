<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= username %>
    </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/consumer.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css">
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <link rel="stylesheet" href="/css/product_swiper.css">
    <script src="/js/consumer.js" defer></script>

</head>

<body>
    <header>
        <button id="hamburg"><i class="fa fa-bars"></i></button>
        <nav id="nav-link">
            <button id="user-icon"><i class="fas fa-user"></i></button>
        </nav>
    </header>
    <aside id="order-section">
        <button id="close-order">&times;</button>
        <h3>Your Orders</h3>
        <ul id="order-list">
            <% if (orders && orders.length> 0) { %>
                <% orders.forEach(order=> { %>
                    <li>
                        <%= order.productName %> - â‚¹<%= order.price %> (Qty: <%= order.quantity %>)
                    </li>
                    <% }) %>
                        <% } else { %>
                            <li>No orders yet</li>
                            <% } %>
        </ul>
    </aside>

    <section id="search-section">
        <input type="search" id="search-bar">
        <button type="button" id="search-btn" style="background: none; border: none;"><i
                class="fa fa-search"></i></button>
    </section>
    <% productTypes.forEach(type=> { %>
        <%- include('partials/product_swiper.ejs', { productType : type.productType, products :
            type.products,seeMoreLink : type.seeMoreLink})%>
            <% }) %>
</body>

</html>